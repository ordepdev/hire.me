<h2 class="signin-heading">Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-signin' }) do |f| %>
  <div><%= f.email_field :email, :class => 'input-block-level', :placeholder => 'Email address' %></div>

  <div><%= f.password_field :password, :class => 'input-block-level', :placeholder => 'Password' %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> Remember me! <br /></div>
  <% end -%>

  <div><%= f.submit 'Sign in', :class => 'btn btn-success' %></div>
<% end %>

<%= render "devise/links" %>